<style>
    body{
        padding-top: 8vh;
    }
    html{
        scroll-padding-top: 8vh;
    }
    section{
        margin: 6.25em 0;
        width: 100%;
    }
    #contact::before{
        content: "Contact Us---";
        position: fixed;
        top: 0;
        color: transparent;
        background-color: #0044AA;
        height: .2em;
        width: max-content;
    }
    form .input input{
        padding: 1em;
        font-size: 1em;
        border: .125em solid rgba(175, 175, 175, 0.4);
        border-radius: 13px;
        width: 100%;
        box-sizing: border-box;
    }
    #submit{
        background: #9DFF95;
        border-radius: 1em;
        width: 100%;
        height: 3em;
        text-align: center;
        font-size: 1.5em;
        box-sizing: border-box;
    }
    #mkmks{
        height: 20.3em;
    }
    #ffgui{
        width: 80%;
        padding: 2.5% 5%;
        height: 10.5em;
        background-color: #C8FFF8;
    }
    #gguyi{
        margin-left: 18em;
        position: relative;
    }
    @media screen and (max-width: 376px){
        #bebek{
            font-size: 1.4em;
        }
        #gguyi{
            top: 50%;
            transform: translateY(-50%);
        }
    }
    @media screen and ( min-width: 279px) and (max-width: 281px){
        body{
            height: 653px;
            position: relative;
        }
        footer{
            position: absolute;
            bottom: 0;
        }
    }
</style>
<% if(alert){ %>
    <script>alert("<%= alert %>")</script>
<% } %> 
<h1 class="header alignLeftRel strong marginTopP">Contact Us</h1>
<section>
    <div class="radius marginCent" id="ffgui">
        <img id="mkmks" src="art/time.svg" style="position: absolute;">
        <div id="gguyi">
            <h1 class="subheader strong alignLeftRel tem" >Hours</h1>
            <div class="marginTopP alignLeftRel">
                <p class="med48 redHatTextRegular tem" id="bebek" style="white-space: pre-line; text-align: left;"><b>Monday-Friday:</b> 9am-5pm
            <b>Saturday:</b> By appointment
            <b>Sunday:</b> Closed</p>
            </div>
        </div>
    </div>
</section>
<div class="line"></div>
<section class="Pcenter_cont" style="flex-direction: column;">
    <h1 class="subheader strong" style="text-align: center;">Contact</h1>
    <form id="contact_form" class="marginCent" style="margin-top: 4em;width: 70%;" method="POST" action="/contact">
        <div class="input"  style="margin-top: 2.5em;">
            <label form="contact_form" class="redHatDisplayRegular ofr" for="message"><p>Message</p></label>
            <input required form="contact_form" class="marginTopP" type="message" name="message" id="message">
        </div>
        <div class="input"  style="margin-top: 2.5em;">
            <label form="contact_form" class="redHatDisplayRegular ofr" for="email"><p>Email</p></label>
            <input required form="contact_form" class="marginTopP" type="email" name="email" id="email">
        </div>
        <div class="input" style="margin-top: 2.5em;">
            <label form="contact_form" class="redHatDisplayRegular ofr" for="name" ><p>Name</p></label>
            <input required form="contact_form" class="marginTopP" type="text" name="name" id="name">
        </div>
        <div id="submit_cont" style="margin-top: 5em;">
            <label form="contact_form"  for="submitI">
                <div id="submit" class="Pcenter_cont">
                    <h3 class="redHatDisplayBold" style="font-size: 1.2em;">Submit</h3>
                    <input form="contact_form" class="marginTopP" style="display: none;" id="submitI" type="submit">
                </div>
            </label>
        </div>
    </form>
</section>
<div style="visibility: hidden;">-</div>